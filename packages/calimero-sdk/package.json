{
  "name": "@calimero-is-near/calimero-p2p-sdk",
  "version": "0.0.29",
  "description": "Javascript library to interact with Calimero P2P node",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@libp2p/crypto": "^4.1.0",
    "@libp2p/interface": "^1.3.0",
    "@libp2p/peer-id": "^4.1.0",
