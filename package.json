{
  "name": "calimero-core",
  "version": "0.1.1",
  "description": "Core Calimero infrastructure and tools",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format:rust": "cargo fmt --all",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "check:rust": "cargo check --all-targets --all-features",
    "test:rust": "cargo test --all-targets --all-features",
    "pre-commit": "cargo fmt --all -- --check && cargo clippy --all-targets --all-features -- -D warnings"
  },
  "devDependencies": {
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/core.git"
  },
  "keywords": [
    "calimero",
    "rust",
    "blockchain",
    "crdt",
    "p2p"
  ],
  "author": "Calimero Limited <info@calimero.network>",
  "license": "MIT OR Apache-2.0"
}
