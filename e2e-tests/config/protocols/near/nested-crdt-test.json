      }
    },
    {
      "call": {
        "methodName": "get_tag_count",
        "argsJson": {
          "key": "user-1"
        },
        "expectedResultJson": 4,
        "target": "allMembers",
        "retries": 10,
        "intervalMs": 1000,
        "description": [
          "Verify all 4 tags present: rust, backend, crdt, distributed",
          "SUCCESS: Union merge preserved all concurrent additions!"
        ]
      }
    }
  ]
}
